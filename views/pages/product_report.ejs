<% include ../partials/header %>

&nbsp;
<h1  align = 'center'>Purchase by item</h1>
<table class="table">
    <thead>
        <tr>
        <th>ITEM NAME</th>
        <th>QUANTITY</th>
        <th>AMOUNT</th>
        </tr>
    </thead>
    <tbody>
    <% products.forEach(function(product) { %>
        <tr>
            <td scope="row"><font color="black"><%= product.title %></font></td>
            <td><font color="black"><%= product.quantity %></font></td>
            <td><font color="black">$<%= product.price %></font></td>
        </tr>
        <% }); %>
        <% sum.forEach(function(sum) { %>
        <tr>
            <td scope="row">Total</td>
            <td id="quantity"><%= sum.squantity %></td>
            <td id="price">$<%= sum.sprice %></td>
        </tr>
        <% }); %>
    </tbody>
</table>

