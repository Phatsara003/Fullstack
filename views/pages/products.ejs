<% include ../partials/header %>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <td><a  class="btn btn-primary" href="/addproduct" role="button">Add new</a></td>
        </tr>
         
    </thead>
    <tbody>
    <%products.forEach(function(product){ %>
<tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td><a  class="btn btn-warning" href="/products/<%=product.id%>" role="button">Update</a>
            <a  class="btn btn-danger" href="#" role="button">Delete</a></td>
        </tr>
        
    <% }); %>
        
        
    </tbody>

    
</table>

 