<% include ../partials/header %>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <td><a  class="btn btn-primary" href="/product_add" role="button">Add new Product</a></td>
        </tr>
         
    </thead>
    <tbody id="myTable">
    <%products.forEach(function(product){ %>
<tr>
            <td scope="row"><%= product.product_id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td><a  class="btn btn-warning" href="/products/<%= product.product_id %>" role="button">Update</a>
            
            <a name="btnConfirm" value="Confirm"  class="btn btn-danger" href="/product_delete/<%= product.product_id %>" onclick="return confirm('Are you sure you want to delete?')"role="button">DELETE</a></td>
        </tr>
        
    <% }); %>
        
        
    </tbody>

    
</table>
<script>
        $(document).ready(function(){
          $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
        </script>
 