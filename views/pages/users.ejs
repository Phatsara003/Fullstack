<% include ../partials/header %>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>password</th>
            <td><a  class="btn btn-primary" href="/user_add" role="button">Add new User</a></td>
        </tr>
    </thead>
    <tbody id="myTable">
    <%users.forEach(function(user){ %>
<tr>
            <td scope="row"><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td><a  class="btn btn-warning" href="/users/<%= user.id%>" role="button">Update</a>
            
            <a name="btnConfirm" value="Confirm"  class="btn btn-danger" href="/user_delete/<%= user.id %>" onclick="return confirm('Are you sure you want to delete?')"role="button">DELETE</a></td>
        </tr>
    <% }); %>
        
        
    </tbody>


</table>
<script>
        $(document).ready(function(){
          $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
        </script>